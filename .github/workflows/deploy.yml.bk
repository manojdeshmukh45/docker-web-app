name: CI/CD Deploy to EC2

on:
  push:
    branches: [ main ]

jobs:
  deploy:
    runs-on: ubuntu-latest

    env:
      DOCKER_IMAGE_NAME: ${{ secrets.DOCKER_IMAGE }}  # e.g., manojdocker/mvj

    steps:
    - name: ğŸ§¾ Checkout Code
      uses: actions/checkout@v3

    - name: ğŸ·ï¸ Set Dynamic Tag
      id: tag
      run: |
        TAG="$(date +%Y%m%d)-${GITHUB_SHA::7}"
        echo "TAG=$TAG" >> $GITHUB_ENV
        echo "âœ… Using image tag: $TAG"

    - name: ğŸ³ Login to Docker Hub
      run: echo "${{ secrets.DOCKER_PASSWORD }}" | docker login -u "${{ secrets.DOCKER_USERNAME }}" --password-stdin

    - name: ğŸ› ï¸ Build Docker Image with Dynamic Tag
      run: |
        docker build -t $DOCKER_IMAGE_NAME:$TAG .

    - name: ğŸ“¤ Push Tagged Image to Docker Hub
      run: |
        docker push $DOCKER_IMAGE_NAME:$TAG

    - name: ğŸš€ Deploy to EC2 via SSH
      uses: appleboy/ssh-action@v1.0.0
      with:
        host: ${{ secrets.EC2_HOST }}
        username: ${{ secrets.EC2_USER }}
        key: ${{ secrets.EC2_KEY }}
        script: |
          docker pull $DOCKER_IMAGE_NAME:$TAG
          docker stop flask-container || true
          docker rm flask-container || true
          docker run -d --name flask-container -p 5000:5000 $DOCKER_IMAGE_NAME:$TAG
